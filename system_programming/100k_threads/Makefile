CC = gcc
BASE_CFLAGS = -ansi -pedantic-errors -Wall -Wextra -fPIC -lpthread
DEBUG_FLAGS = -g -DDEBUG
RELEASE_FLAGS = -o3 -DNDEBUG

CFLAGS_DEBUG = $(BASE_CFLAGS) $(DEBUG_FLAGS)
CFLAGS_RELEASE = $(BASE_CFLAGS) $(RELEASE_FLAGS)

INCLUDE_DIR = include
SRC_DIR = src
TEST_DIR = test
BIN_DEBUG_DIR = bin/debug
BIN_RELEASE_DIR = bin/release

PROJECT_NAME = 100k_threads

TARGET_DEBUG = $(PROJECT_NAME)_debug
TARGET_RELEASE = $(PROJECT_NAME)_release

SRC_FILE = $(SRC_DIR)/$(PROJECT_NAME).c
TEST_FILE = $(TEST_DIR)/*.c
INC_FILE = $(INCLUDE_DIR)/$(PROJECT_NAME).h

UTILS_INCLUDE = -I ../../utils/include
UTILS_SRC = ../../utils/src/utils.c
TEST_UTILS_INCLUDE = -I ../../utils/test

SRC_OBJ_DEBUG = $(BIN_DEBUG_DIR)/$(PROJECT_NAME).o
SRC_OBJ_RELEASE = $(BIN_RELEASE_DIR)/$(PROJECT_NAME).o

UTILS_OBJ_DEBUG = $(BIN_DEBUG_DIR)/utils.o
UTILS_OBJ_RELEASE = $(BIN_RELEASE_DIR)/utils.o

SHARED_LIB_DEBUG = $(BIN_DEBUG_DIR)/lib_debug_$(PROJECT_NAME).so
SHARED_LIB_RELEASE = $(BIN_RELEASE_DIR)/lib_release_$(PROJECT_NAME).so

.PHONY: all debug release coverage clean run run_release vlg gdb

all: debug

debug: $(TARGET_DEBUG)
release: $(TARGET_RELEASE)

$(UTILS_OBJ_DEBUG): $(UTILS_SRC) | $(BIN_DEBUG_DIR)
	@$(CC) $(CFLAGS_DEBUG) -I$(INCLUDE_DIR) $(UTILS_INCLUDE) -c $< -o $@

$(UTILS_OBJ_RELEASE): $(UTILS_SRC) | $(BIN_RELEASE_DIR)
	@$(CC) $(CFLAGS_RELEASE) -I$(INCLUDE_DIR) $(UTILS_INCLUDE) -c $< -o $@

$(SHARED_LIB_DEBUG): $(SRC_OBJ_DEBUG) $(UTILS_OBJ_DEBUG) | $(BIN_DEBUG_DIR)
	@$(CC) -shared -o $@ $^

$(SHARED_LIB_RELEASE): $(SRC_OBJ_RELEASE) $(UTILS_OBJ_RELEASE) | $(BIN_RELEASE_DIR)
	@$(CC) -shared -o $@ $^

$(BIN_DEBUG_DIR)/%.o: $(SRC_DIR)/%.c | $(BIN_DEBUG_DIR)
	@$(CC) $(CFLAGS_DEBUG) -I$(INCLUDE_DIR) $(UTILS_INCLUDE) $(TEST_UTILS_INCLUDE) -c $< -o $@

$(BIN_RELEASE_DIR)/%.o: $(SRC_DIR)/%.c | $(BIN_RELEASE_DIR)
	@$(CC) $(CFLAGS_RELEASE) -I$(INCLUDE_DIR) $(UTILS_INCLUDE) $(TEST_UTILS_INCLUDE) -c $< -o $@

$(TARGET_DEBUG): $(TEST_FILE) $(SHARED_LIB_DEBUG)
	@$(CC) $(CFLAGS_DEBUG) -I$(INCLUDE_DIR) $(UTILS_INCLUDE) $(TEST_UTILS_INCLUDE) $^ -o $@

$(TARGET_RELEASE): $(TEST_FILE) $(SHARED_LIB_RELEASE)
	@$(CC) $(CFLAGS_RELEASE) -I$(INCLUDE_DIR) $(UTILS_INCLUDE) $(TEST_UTILS_INCLUDE) $^ -o $@

run: debug
	@echo "DEBUG MODE"
	@LD_LIBRARY_PATH=$(BIN_DEBUG_DIR) ./$(TARGET_DEBUG)

run_release: release
	@echo "RELEASE MODE"
	@LD_LIBRARY_PATH=$(BIN_RELEASE_DIR) ./$(TARGET_RELEASE)

vlg: $(TARGET_DEBUG)
	LD_LIBRARY_PATH=$(BIN_DEBUG_DIR) valgrind --leak-check=full --track-origins=yes ./$(TARGET_DEBUG)

gdb: $(TARGET_DEBUG)
	@echo "GDB MODE"
	@LD_LIBRARY_PATH=$(BIN_DEBUG_DIR) gdb ./$(TARGET_DEBUG)
	
$(BIN_DEBUG_DIR) $(BIN_RELEASE_DIR):
	mkdir -p $@

clean:
	@rm -rf $(TARGET_DEBUG) $(TARGET_RELEASE) \
	       $(BIN_DEBUG_DIR)/*.o $(BIN_DEBUG_DIR)/*.so \
	       $(BIN_RELEASE_DIR)/*.o $(BIN_RELEASE_DIR)/*.so
